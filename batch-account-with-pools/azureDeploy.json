{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "batchAccountName": {
      "type": "string",
      "metadata": {
        "description": "Batch Account Name. This must be unique"
      }
    },
    "poolID": {
      "type": "string",
      "metadata": {
        "description": "a string that uniquely identifies the pool within the batch account"
      }
    },
    "poolLocation": {
      "type": "string",
      "defaultValue": "UK South",
      "allowedValues": [
        "UK South",
        "UK West"
      ]
    },
    "osType": {
      "type": "string",
      "defaultValue": "2019-Datacenter",
      "allowedValues": [
	      "2019-Datacenter",
        "2016-Datacenter"
      ]
    },
    "vmSize":{
      "type": "string",
      "defaultValue": "Standard_D2_v2",
      "allowedValues": [
	      "Standard_D2_v2",
	      "Standard_D3_v2",
	      "Standard_D4_v2"
      ]
    },
    "dedicatedNodes": {
      "type": "string",
      "defaultValue": "1",
      "allowedValues": [
        "1",
        "2",
        "3"
      ],
      "metadata": {
        "description": "number of dedicated nodes up to a maximunm of 3"
      }
    },
    "lowPriorityNodes": {
      "type": "string",
       "defaultValue": "1",
      "allowedValues": [
        "1",
        "2",
        "3"
      ],
      "metadata": {
        "description": "number of low priority nodes up to a maximunm of 3"
      }
    },
    "monitored": {
      "type": "string",
      "defaultValue": "true",
      "allowedValues": [
        "true",
        "false"
      ]
    },
    "ownerTag": {
      "type": "string"
    },
    "applicationTag": {
      "type": "string"
    },
    "environmentTag": {
      "type": "string"
    },
    "criticalityTag": {
      "type": "string",
      "allowedValues": [
        "Tier 1",
        "Tier 2",
        "Tier 3",
        "Tier 4"
      ]
    }
  },
  "variables": {
    "storageAccountName": "[concat(uniqueString(resourceGroup().id),'storage')]",
    "location": "[parameters('poolLocation')]",
    "poolDisplayName": "[parameters('poolID')]",
    "storageAccountSku": "Standard_LRS"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountname')]",
      "apiVersion": "2016-01-01",
      "location": "[variables('location')]",
      "comments": "This storage account is used to associate to a batch account",
      "sku": {
        "name": "[variables('storageAccountsku')]"
      },
      "kind": "Storage",
      "tags": {
        "ObjectName": "[variables('storageAccountName')]",
        "owner": "[parameters('ownerTag')]",
        "application": "[parameters('applicationTag')]",
        "environment": "[parameters('environmentTag')]",
        "criticality": "[parameters('criticalityTag')]",
        "ansServiceCatalog": "true",
        "monitored": "[parameters('monitored')]"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Batch/batchAccounts",
      "name": "[parameters('batchAccountName')]",
      "apiVersion": "2015-12-01",
      "location": "[variables('location')]",
      "tags": {
        "ObjectName": "[parameters('batchAccountName')]",
        "owner": "[parameters('ownerTag')]",
        "application": "[parameters('applicationTag')]",
        "environment": "[parameters('environmentTag')]",
        "criticality": "[parameters('criticalityTag')]",
        "ansServiceCatalog": "true"
      },
      "properties": {
        "autoStorage": {
          "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ]
    },
    {
      "type": "Microsoft.Batch/batchAccounts/pools",
      "name": "[concat(parameters('batchAccountName'), '/', parameters('poolID'))]",
      "apiVersion": "2017-09-01",
      "scale": null,
      "properties": {
          "displayName": "[variables('poolDisplayName')]",
          "vmSize": "[parameters('vmSize')]",
          "interNodeCommunication": "Disabled",
          "maxTasksPerNode": 1,
          "taskSchedulingPolicy": {
              "nodeFillType": "Spread"
          },
          "deploymentConfiguration": {
              "virtualMachineConfiguration": {
                  "imageReference": {
                      "publisher": "MicrosoftWindowsServer",
                      "offer": "WindowsServer",
                      "sku": "[parameters('osType')]",
                      "version": "latest"
                  },
                  "nodeAgentSkuId": "batch.node.windows amd64",
                  "windowsConfiguration": {
                      "enableAutomaticUpdates": true
                  }
              }
          },
          "scaleSettings": {
              "fixedScale": {
                  "targetDedicatedNodes": "[parameters('dedicatedNodes')]",
                  "targetLowPriorityNodes": "[parameters('lowPriorityNodes')]",
                  "resizeTimeout": "PT15M"
              }
          }
      },
      "dependsOn": [
          "[resourceId('Microsoft.Batch/batchAccounts', parameters('batchAccountName'))]"
      ]
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "batchAccountName": {
      "type": "string",
      "value": "[parameters('batchAccountName')]"
    }
  }
}